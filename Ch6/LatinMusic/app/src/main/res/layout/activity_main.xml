<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.androidbootcamp.latinmusic.MainActivity">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="125dp"
        android:id="@+id/imgMarimba"
        android:src="@drawable/marimba"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/marimba" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnMarimba"
        android:id="@+id/btnMarimba"
        android:layout_below="@+id/imgMarimba"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="125dp"
        android:id="@+id/imgMerengue"
        android:layout_below="@+id/btnMarimba"
        android:layout_centerHorizontal="true"
        android:src="@drawable/merengue"
        android:contentDescription="@string/merengue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnMerengue"
        android:id="@+id/btnMerengue"
        android:layout_below="@+id/imgMerengue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_marginBottom="10dp" />
</RelativeLayout>
