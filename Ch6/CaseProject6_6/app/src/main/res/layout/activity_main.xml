<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:id="@+id/imgCover"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/maroon5"
        android:contentDescription="@string/imgCover" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPlayAnimals"
        android:id="@+id/btnAnimals"
        android:layout_below="@+id/imgCover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/imgCover"
        android:layout_alignLeft="@+id/imgCover"
        android:layout_alignEnd="@id/imgCover"
        android:layout_alignRight="@+id/imgCover"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPlayMaps"
        android:id="@+id/btnMaps"
        android:layout_below="@+id/btnAnimals"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/imgCover"
        android:layout_alignLeft="@+id/imgCover"
        android:layout_alignEnd="@id/imgCover"
        android:layout_alignRight="@+id/imgCover"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPlaySugar"
        android:id="@+id/btnSugar"
        android:layout_below="@+id/btnMaps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/imgCover"
        android:layout_alignLeft="@+id/imgCover"
        android:layout_alignEnd="@id/imgCover"
        android:layout_alignRight="@+id/imgCover"
        android:textSize="18sp" />
</RelativeLayout>
